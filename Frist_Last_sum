//input a number from user and find first and last digit of number using loop n=12345
#include <stdio.h>
int main() {
   int n;
	scanf("%d",&n);
	int l = n % 10;
	
	while(n>=10){
		n = n / 10;
	}
    printf("first digit is %d\n",n);
	printf("last digit is %d\n",l);
    printf("sum of last and fist digit is %d",n+l);
  return 0;
}
